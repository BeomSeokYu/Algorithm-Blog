# Image location
REGISTRY_HOST=192.168.0.4:5000
IMAGE_NAME=algorithm-blog
IMAGE_TAG=latest

# App runtime
APP_PORT=9000
SPRING_PROFILES_ACTIVE=default
TZ=Asia/Seoul
JAVA_OPTS=-Duser.timezone=Asia/Seoul

# Database (MariaDB on Raspberry Pi 4B)
SPRING_DATASOURCE_URL=jdbc:mysql://192.168.0.4:3306/algorithm_blog?serverTimezone=Asia/Seoul
DB_USERNAME=blog_user
DB_PASSWORD=change_me

# OAuth (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT
JWT_ISSUER=algorithm-blog
JWT_SECRET_KEY=replace-with-a-long-random-string

# Optional external config file
CONFIG_DIR=/apps/algorithm-blog/config
SPRING_CONFIG_IMPORT=optional:file:/config/application-key.yml
